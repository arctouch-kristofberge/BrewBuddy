<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
				xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
				x:Class="BrewBuddy.View.BreweryTab"
				Title="{Binding Title}">

	<ContentPage.Content>

	  <StackLayout Orientation="Vertical" VerticalOptions="StartAndExpand">
	    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
	      <SearchBar x:Name="Searchbar" Placeholder="Search by name" SearchButtonPressed="SearchClicked" HorizontalOptions="FillAndExpand"/>
   	      <Button Text="Search" Clicked="SearchClicked" HorizontalOptions="FillAndExpand"/>
	    </StackLayout>
	      <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" HorizontalOptions="Center"/>
	      <Label Text="{Binding ListHeader}" IsVisible="{Binding IsDataVisible}"/>
	      <ListView ItemsSource="{Binding Items}" ItemTapped="ItemTapped" IsVisible="{Binding IsDataVisible}">
	        <ListView.ItemTemplate>
	          <DataTemplate>
	            <ViewCell>
	              <StackLayout>
	                <Label Text="{Binding Name}"/>
	              </StackLayout>
	            </ViewCell>
	          </DataTemplate>
	        </ListView.ItemTemplate>
	      </ListView>
	    </StackLayout>

	</ContentPage.Content>
</ContentPage>
